require_once "Modyllic/SQL.php";

$load = Modyllic_Commandline::args( "sqldump", "spec", $argv );

$schema = Modyllic_Commandline::schema($load['spec']);
Modyllic_Commandline::warn("\r".str_repeat(" ",70)."\r");

$gen = new Modyllic_Generator_NativeSQL();
error_log("");
print $gen->create_sql( $schema );
