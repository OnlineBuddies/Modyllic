require_once "Modyllic/CommandLine.php";
require_once "Modyllic/Generator.php";

// note the hard coded paths from my laptop >.>
/// @todo fixme
require_once '/opt/php/xhprof/xhprof_lib/utils/xhprof_lib.php';
require_once '/opt/php/xhprof/xhprof_lib/utils/xhprof_runs.php';

$args = Modyllic_CommandLine::get_args(array(
    'description' => 'Loads a schema with xhprof enabled',
    'arguments' => array(
        'spec' => array('multiple'=>true) )));

$ignore = array('call_user_func', 'call_user_func_array');

xhprof_enable(XHPROF_FLAGS_CPU + XHPROF_FLAGS_MEMORY, $ignore);

$schema = Modyllic_CommandLine::schema($args->args['spec']);

$xhprof_data = xhprof_disable();
$xhprof_runs = new XHProfRuns_Default();
$run_id = $xhprof_runs->save_run($xhprof_data, "schemaload");
$profiler_url = sprintf('http://localhost/~bturner/xhprof/xhprof_html/index.php?run=%s&source=%s', $run_id, "schemaload");
echo "$profiler_url\n";
