@include_once dirname(realpath(__FILE__))."/../lib/SQL.php";
if ( ! class_exists('SQL',FALSE) ) {
    require_once "SQL.php";
}

$load = SQL_Commandline::args( "sqltophp", "spec class", $argv );

$schema = SQL_Commandline::schema($load['spec']);

$class = @$load['class']['args'][0];
if (!$class) { $class = ucfirst($schema->name); }
$generator = new SQL_Generator_PHP();

print $generator->helpers($schema,$class);
