require_once "Modyllic/SQL.php";

$load = Modyllic_Commandline::args( "sqltophp", "spec class", $argv );

$schema = Modyllic_Commandline::schema($load['spec']);

$class = @$load['class']['args'][0];
if (!$class) { $class = ucfirst($schema->name); }
$generator = new Modyllic_Generator_PHP();

print $generator->helpers($schema,$class);
